{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 130
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double",
            "semicolons": "asNeeded"
        }
    },
    "json": {
        "parser": {
            "allowTrailingCommas": true
        }
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "maxSize": 52428800,
        "ignore": [
            "**/.next",
            "**/node_modules",
            "**/.turbo",
            "**/build",
            "**/dist",
            "pnpm-lock.yaml",
            "**/examples/react-app/src/types",
            "**/factories/**/*.ts"
        ]
    }
}
